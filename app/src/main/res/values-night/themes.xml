<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HNT" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->

        <!--标题栏的颜色-->
        <item name="colorPrimary">@color/black4</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/black4</item>
        <item name="colorPrimaryVariant">@color/black4</item>
        <!--EditText默认颜色-->
        <item name="colorAccent">@color/black4</item>
        <item name="colorOnPrimary">@color/black4</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--启动背景-->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowIsTranslucent">true</item>


        <!--<item name="android:navigationBarColor"></item>&lt;!&ndash;导航栏颜色&ndash;&gt;-->
        <!--<item name="android:statusBarColor"></item>&lt;!&ndash;状态栏颜色&ndash;&gt;-->

        <item name="android:textColor">@color/black1</item><!--默认字体颜色-->
        <item name="android:textSize">15.0sp</item><!--默认字号-->
        <item name="android:typeface">normal</item><!--默认字体-->
        <!--<item name="android:textScaleX">1.0</item>&lt;!&ndash;字体间距&ndash;&gt;-->
    </style>
</resources>