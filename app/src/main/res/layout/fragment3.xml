<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:background="@color/background">
    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"/>-->

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/white"
                    android:textSize="23sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="14dp"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/yuanjiao_20_lanse">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HNT"
                        android:textColor="@color/white"
                        android:textSize="23sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户余额"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0.00"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提币"
                            android:onClick="onClick"
                            android:textColor="@color/white"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/yuanjiao_10_baisetouming"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/textView4"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"
                    android:drawableLeft="@mipmap/ic_fragment3_1"
                    android:drawablePadding="15dp"
                    android:text="提币记录"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textView5"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:drawableLeft="@mipmap/ic_fragment3_2"
                    android:drawablePadding="15dp"
                    android:text="收益明细"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textView6"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:drawableLeft="@mipmap/ic_fragment3_3"
                    android:drawablePadding="15dp"
                    android:text="钱包地址"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textView7"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:drawableLeft="@mipmap/ic_fragment3_4"
                    android:drawablePadding="15dp"
                    android:text="修改密码"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textView9"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:drawableLeft="@mipmap/ic_fragment3_4"
                    android:drawablePadding="15dp"
                    android:text="交易密码"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:drawableLeft="@mipmap/ic_fragment3_5"
                    android:drawablePadding="15dp"
                    android:text="退出账号"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</RelativeLayout>